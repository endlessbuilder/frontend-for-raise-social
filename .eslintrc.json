{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jasmine": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "next"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-undef": "off"  // Disable the no-undef rule if it causes issues with browser globals
  },
  "globals": {
    "localStorage": "readonly",
    "window": "readonly"
  }
}